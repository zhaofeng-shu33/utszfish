<!--pages/requirement/create.wxml-->
<view style='width:100%;background: #fff;padding:0px 20px;'>
  <view style="width:100%;height:10px;background:#fff;"></view>
  <input bindinput="titleInput" style="width:100%;background: #fff;font-size:14px;height:40px;line-height:40px;" placeholder="公告标题" value='{{titleValue}}'/>
	<view style="width:100%;height:1px;background:#ccc;"></view>
  <view style='height:20px;'></view>
  <textarea maxlength="10000" bindinput='textAreaInput' placeholder="公告内容" name="textarea" auto-height='true' style="width:100%;background: #fff;font-size:14px;" value='{{textValue}}'/>
  <view style='height:60px;'></view>
</view>
<view class="weui-flex" style="width:100%;margin-top:10px;background:#fff;padding:0px 20px;height:40px;">
  <view class='weui-flex__item' style='width:100px;color:#666;font-size:14px;height:40px;line-height:40px;'>通知所有人</view>
  <view style='padding-top:4px;'>
    <switch bindchange='btnNotifiSwitch'></switch>
  </view>
</view>
<view style='width:100%;font-size:12px;color:#ff0000;padding:0px 20px;'>请慎重决定是否通知所有人，这将给所有用户发送一条无法撤回的服务通知</view>
<view style='width:100%;padding:20px;'>
    <view bindtap="btnPost" style='width:100%;height:44px;line-height:44px;text-align:center;color:#000000;background:#fdda42;font-size:14px;border-radius:22px;'>发布公告</view>
</view>